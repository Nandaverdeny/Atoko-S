@model AToko.Models.AccountSupplier

@{
    ViewBag.Title = "AccountSupplier";
}

<h2>AccountSupplier</h2>

@using (Html.BeginForm("AccountSupplier", "AccountSupplier", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
