@{
    ViewBag.Title = "Home Page";
}


<style>
    .bckground {
        background: url(../../images/atoko.jpg) no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        padding-left: 0px !important;
        padding-right: 0px !important;
        padding-top: 0px !important;
        padding-bottom: 0px !important;
    }
</style>


<div class="bckground">

    <div class="jumbotron" style="opacity:0.8;">
        
        <h1>Welcome to AToko</h1>
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("admin") || User.IsInRole("sales"))
            {
                <p class="lead">Use navigation bar to proceed to another page.</p>
            }
            else
            {
                <p class="lead">Click AToko or below button to navigate to report stock</p>
                <p><a href="~/Report/ReportStock" class="btn btn-primary btn-lg">Report &raquo;</a></p>
            }
        }
        else
        {
            <p class="lead">Please proceed to log in to start using this app.</p>
            <p><a href="~/Account/Login" class="btn btn-primary btn-lg">Log in &raquo;</a></p>
        }

    </div>
</div>
